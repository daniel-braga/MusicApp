<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danielbraga.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing" />
        <activity
            android:name=".LibraryActivity"
            android:label="@string/library" />
        <activity
            android:name=".MusicStoreActivity"
            android:label="@string/music_store" />
        <activity android:name=".LibraryArtistActivity" android:label="@string/artists" />
        <activity android:name=".LibraryAlbumActivity" android:label="@string/albums" />
        <activity android:name=".LibraryGenreActivity" android:label="@string/genres" />
        <activity android:name=".LibraryAllActivity" android:label="@string/all_music" />
    </application>

</manifest>